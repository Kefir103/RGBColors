<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_retry_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/retry_counter"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38sp"
        android:layout_marginBottom="38sp"
        android:layout_gravity="center"
        android:textSize="30sp"
        tools:text="Color"
        tools:textSize="30sp" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/btn_grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:columnCount="2"
        app:rowCount="2">

        <Button
            android:id="@+id/btn_TL"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:onClick="checkColor" />

        <Button
            android:id="@+id/btn_TR"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:onClick="checkColor" />

        <Button
            android:id="@+id/btn_BL"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:onClick="checkColor" />

        <Button
            android:id="@+id/btn_BR"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:onClick="checkColor" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/tv_correct_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/correct_answers" />

</LinearLayout>